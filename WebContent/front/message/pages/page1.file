<%
		int rowsPerPage = 10;//每頁的筆數    
		int rowNumber=0;      //總筆數
		int pageNumber=0;     //總頁數      
		int whichPage_M=0;      //第幾頁
		int pageIndexArray[]=null;
		int pageIndex=0; 
%>
<%  
	    rowNumber=list.size();
	    if (rowNumber%rowsPerPage !=0)
	     pageNumber=rowNumber/rowsPerPage +1;
	    else pageNumber=rowNumber/rowsPerPage;    
	
	    pageIndexArray=new int[pageNumber]; 
	    for (int i=1 ; i<=pageIndexArray.length ; i++)
	    pageIndexArray[i-1]=i*rowsPerPage-rowsPerPage;
%>
<%  try {
      whichPage_M = Integer.parseInt(request.getParameter("whichPage_M"));
      pageIndex=pageIndexArray[whichPage_M-1];
    } catch (NumberFormatException e) { //第一次執行的時候
       whichPage_M=1;
       pageIndex=0;
    } catch (ArrayIndexOutOfBoundsException e) { //總頁數之外的錯誤頁數
         if (pageNumber>0){
              whichPage_M=pageNumber;
              pageIndex=pageIndexArray[pageNumber-1];
         }
    } 
    request.setAttribute("whichPage_M",whichPage_M);
    
int endIndex=pageIndex+rowsPerPage-1;
if(endIndex >=rowNumber)
endIndex=rowNumber-1;
int floor=pageIndex;
